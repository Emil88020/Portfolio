{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/I", "includes",                       // Include header files from the 'includes' folder
                "/Fo:obj\\",                            // Specify output directory for object files
                "/Fe:${workspaceFolder}\\main.exe",     // Specify output executable file name
                "${workspaceFolder}\\main.c",           // Entry point of the program
                "${workspaceFolder}\\src\\*.c",         // Compile all .c files in the 'src' folder
                "${workspaceFolder}\\libft\\*.c",       // Compile all .c files in the 'libft' folder
                "/link", "/DEBUG"                       // Enable debug information
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}