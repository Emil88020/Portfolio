<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="ModelUpdater.MainPage">

	<ScrollView>
		<Grid>
			<StackLayout Orientation="Horizontal"
						VerticalOptions="Start"
						HorizontalOptions="Start"
						Margin="20">
			</StackLayout>
			<StackLayout Padding="20"
						Spacing="15"
						VerticalOptions="Center"
						HorizontalOptions="Center">
				<Label Text="Zaktualizuj model"
						FontSize="50"
						HorizontalOptions="Center"
						FontAttributes="Bold"
						Margin="0,-50,0,0" />
				<Button Text="Wczytaj excel z Entso-e"
						x:Name="btnWczytajEntsoE"
						BackgroundColor="#0FC2C0"
						TextColor="White"
						CornerRadius="8"
						FontSize="25"
						HeightRequest="100"
						WidthRequest="350"
						Clicked="LoadEntsoe"/>
				<Button Text="Wczytaj Model"
						x:Name="btnWczytajModel"
						BackgroundColor="#0CABA8"
						TextColor="White"
						CornerRadius="8"
						FontSize="25"
						HeightRequest="100"
						WidthRequest="350"
						Clicked="LoadModel"
						IsEnabled="False"/>
				<Button Text="Start"
						x:Name="btnStart"
						BackgroundColor="#008F8C"
						TextColor="White"
						CornerRadius="8"
						FontSize="25"
						HeightRequest="100"
						WidthRequest="350"
						Clicked="StartUpdating"
						IsEnabled="False"/>
				<Label x:Name="filePathLabel"/>
			</StackLayout>
		</Grid>
	</ScrollView>

</ContentPage>
